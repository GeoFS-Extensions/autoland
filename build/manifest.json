{
  "manifest_version": 3,
  "name": "GeoFS Autoland",
  "version": "3.1.0",
  "description": "GeoFS Autoland adds new functionalities to the GeoFS Flight Simulator.",
  "action": {
    "default_popup": "ui/popup/popup.html"
  },
  "author": "Nicolas Rodriguez, Guy Adler",
  "icons": {
    "772": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/*", "ui/oninstall/oninstall.html", "data/*.json"],
      "matches": ["*://www.geo-fs.com/*"]
    }
  ],
  "permissions": ["storage", "scripting"],
  "optional_permissions": ["tabs"],
  "host_permissions": ["https://www.geo-fs.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
