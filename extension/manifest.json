{
  "manifest_version": 3,
  "name": "GeoFS Autoland",
  "version": "0.1.2",
  "description": "GeoFS Autoland adds new functionalities to the GeoFS Flight Simulator. This is currently a internal beta.",
  "action": {
    "default_popup": "ui/popup/popup.html"
  },
  "author": "Nicolas Rodriguez, Guy Adler",
  "icons": {
    "772": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/ap++.js",
        "scripts/fmc.js",
        "ui/oninstall/oninstall.html"
      ],
      "matches": ["*://www.geo-fs.com/*"]
    }
  ],
  "permissions": ["storage", "scripting", "activeTab"],
  "optional_permissions": ["tabs"],
  "host_permissions": ["https://www.geo-fs.com/geofs.php"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.geo-fs.com/*"],
      "js": ["permissionsAlert.js"]
    }
  ]
}
